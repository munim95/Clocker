<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetStart="@+id/start"
        motion:constraintSetEnd="@+id/end"
        motion:duration="250"
        motion:motionInterpolator="linear">
        <OnClick motion:targetId="@id/edit_layout"
            motion:clickAction="transitionToEnd"/>
    </Transition>
    <Transition
        motion:constraintSetStart="@+id/start"
        motion:constraintSetEnd="@+id/end"
        motion:duration="250"
        motion:motionInterpolator="linear">
        <OnClick motion:targetId="@id/pieChartFrameLayout"
            motion:clickAction="transitionToStart"/>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@id/pieChartFrameLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/mainToolbar"
            motion:layout_constraintBottom_toTopOf="@id/edit_layout"
            android:translationY="150dp"/> <!-- 450 - 350-->
        <Constraint
            android:id="@id/edit_layout"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintWidth_default="percent"
            motion:layout_constraintWidth_percent="1"
            android:translationY="350dp"/>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@id/pieChartFrameLayout"
            android:layout_width="200dp"
            android:layout_height="200dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/mainToolbar"
            motion:layout_constraintBottom_toTopOf="@id/edit_layout" />
        <Constraint
            android:id="@id/edit_layout"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintWidth_default="percent"
            motion:layout_constraintWidth_percent="1"
            android:translationY="0dp"/>
    </ConstraintSet>
</MotionScene>