<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <ImageButton
            android:id="@+id/deleteSector"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_remove_black_24dp"
            android:layout_alignParentStart="true"
            android:contentDescription="Remove Sector"/>

        <EditText
            android:id="@+id/sectorName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/deleteSector"
            android:layout_toStartOf="@id/sectorInfo"
            android:background="@drawable/blank"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="Do the dishes"
            />
        <TextView
            android:id="@+id/sectorInfo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toStartOf="@+id/sectorColourImageHolder"
            android:gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:text="10:00 AM - 11:00 PM"/>
        <FrameLayout
            android:id="@+id/sectorColourImageHolder"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="5dp"
            android:layout_centerInParent="true"
            android:layout_alignParentEnd="true">
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/transparent_bg_small"/>
            <View
                android:id="@+id/sectorColourImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#000"/>
        </FrameLayout>
    </RelativeLayout>
    <!-- Visible when time clicked-->
    <LinearLayout
        android:id="@+id/sectorInfoDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:alpha="0"
        android:visibility="gone">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Start"/>
            <include layout="@layout/start_timer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:visibility="gone">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AM"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PM"/>
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="End"/>
            <include layout="@layout/end_timer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:visibility="gone">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AM"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PM"/>
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
