<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="30dp">
    <RadioButton
        android:id="@+id/makeGroupDefault"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true" />
    <ImageButton
        android:id="@+id/deleteGroup"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:src="@drawable/ic_delete_black_24dp"
        android:layout_toEndOf="@id/makeGroupDefault"/>
    <EditText
        android:id="@+id/groupName"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/deleteGroup"
        android:layout_toStartOf="@+id/groupInfo"
        android:background="@drawable/blank"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="Home"
        />
     <TextView
         android:id="@+id/groupInfo"
         android:layout_width="wrap_content"
         android:layout_height="match_parent"
         android:layout_toStartOf="@+id/addSectorToGroup"
         android:gravity="center"
         android:paddingStart="5dp"
         android:paddingEnd="5dp"
         android:text="0 Sectors"/>
    <ImageButton
        android:id="@+id/addSectorToGroup"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_toStartOf="@+id/groupExpandArrowImage"
        android:src="@drawable/ic_add_circle_black_24dp"/>
    <ImageView
        android:id="@+id/groupExpandArrowImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_keyboard_arrow_up_black_24dp"
        />
</RelativeLayout>